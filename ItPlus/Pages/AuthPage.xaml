<Page x:Class="ItPlus.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItPlus.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="25"></TextBlock>
            <TextBlock Text="Логин" ></TextBlock>
            <TextBox Name="login" ></TextBox>
            <TextBlock Text="Пароль" ></TextBlock>
            <PasswordBox Name="password" ></PasswordBox>
            <Button Click="Login">Войти</Button>
            
        </StackPanel>
        
    </Grid>
</Page>
